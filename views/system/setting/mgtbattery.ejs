<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../common/meta.ejs') %>
        <%- include('../common/title.ejs') %>
        <%- include('../common/css.ejs') %>
    </head>

    <body>
        <!-- Begin page -->
        <div id="layout-wrapper">

            <%- include('../common/topbar.ejs') %>
            <%- include('../common/sidebar.ejs') %>

            <!-- ============================================================== -->
            <!-- Start right Content here -->
            <!-- ============================================================== -->
          

            <div class="main-content">
                <div class="page-content">
                    <div class="container-fluid">
                        <%- include('../common/dash.ejs') %>
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-flex align-items-center justify-content-between">
                                    <h4 class="mb-0">배터리관리</h4>

                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <button class="btn btn-primary" type="button" onclick="location.href='/system/setting/mgtbattery/reg'">New</button>
                                        </ol>
                                    </div>

                                </div>
                            </div>
                        </div>
                        
                        

                        <div class="row">
                            <div class="col-lg-12">
                                <div>
                                   
                                </div>
                                <div class="table-responsive mb-4">
                                    <table id = "myTable" class="table table-centered datatable dt-responsive nowrap table-card-list" style="border-collapse: collapse; border-spacing: 0 12px; width: 100%;">
                                        <thead>
                                            <tr class="bg-transparent">                                                
                                                <th>배터리ID</th>
                                                <th>배터리 이름</th>
                                                <th>모듈 모델</th>
                                                <th>배터리 제조사</th>                                                                                            
                                                <th>배터리 타입</th>  
                                                <th>정격전력</th>
                                                <th>등록일</th>
                                                <th>등록자</th>    
                                                <th>설정</th>                                                                                     
                                            </tr>
                                        </thead>
                                        <tbody >
                                            <% for(var i in BMS_LIST) { %>
                                            
                                            <tr>
                                                <td><%=BMS_LIST[i].btry_seq%></td>
                                                <td><%=BMS_LIST[i].btry_nm%></td>
                                                <td><%=BMS_LIST[i].mdl_no%></td>
                                                <td><%=BMS_LIST[i].btry_mfctor_nm%></td>
                                                <td><%=BMS_LIST[i].btry_ty%></td>
                                                <td><%=BMS_LIST[i].btry_max_pwr%></td>
                                                <td><%=BMS_LIST[i].ins_dttm%></td>
                                                <td><%=BMS_LIST[i].ins_nm%></td>
                                                <td>
                                                    <ul class="list-inline mb-0">
                                                        <li class="list-inline-item">
                                                            <a href="/system/setting/mgtbattery/mod?btry_seq=<%=BMS_LIST[i].btry_seq%>" class="px-2 text-primary"><i class="uil uil-pen font-size-18"></i></a>
                                                        </li>
                                                        <li class="list-inline-item">
                                                            <a href="javascript:deleteMgtBattery(<%=BMS_LIST[i].btry_seq%>);" class="px-2 text-danger"><i class="uil uil-trash-alt font-size-18"></i></a>
                                                        </li>
                                                    </ul>
                                                </td>
                                            </tr>
                                            <%}%>
                                        </tbody>
                                    </table>
                                </div>
                                <!-- end table -->
                                <!-- 페이지네이션 -->
                                <div class="row mt-4">
                                    <div class="col-sm-6">
                                        <div>
                                            <p class="mb-sm-0">Page <%=pages.currentPage%> of <%=pages.pageCount%></p>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="float-sm-end">
                                            <ul class="pagination pagination-rounded mb-sm-0">
                                                <!-- 이전페이지 -->
                                                <li class="page-item">
                                                    <a class="page-link" href="/system/setting/mgtbattery?page=<%=pages.previousPage%>">
                                                        <i class="mdi mdi-chevron-left"></i>
                                                    </a>
                                                </li>

                                                <% for(index in liRow) { %>
                                                    <% if(liRow[index] == pages.currentPage) { %>
                                                        <li class="page-item active"><a class="page-link"><%= liRow[index] %></a></li>
                                                    <% } else { %>
                                                        <li class="page-item"><a class="page-link" href="/system/setting/mgtbattery?page=<%=liRow[index]%>"><%= liRow[index] %></a></li>
                                                    <% } %>
                                                <% } %>

                                                <!-- 다음페이지 -->
                                                <li class="page-item">
                                                    <a class="page-link" href="/system/setting/mgtbattery?page=<%=pages.nextPage%>">
                                                        <i class="mdi mdi-chevron-right"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            <!-- 페이지네이션 -->
                            </div>
                        </div>
                        <!-- end row -->
                        
                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->

                
                <%- include('../common/footer.ejs') %>
            </div>
            <!-- end main content-->

        </div>
        <!-- END layout-wrapper -->

        <%- include('../common/sidebarRight.ejs') %>

        <%- include('../common/scripts.ejs') %>

        <script src="/attach/js/common.js"></script>

        <script>
            function deleteMgtBattery(btry_seq){

                swalWithBootstrapButtons.fire({
                title: '삭제하시겠습니까?',
                //text: "You won't be able to revert this!",
                icon: 'question',
                showCancelButton: true,
                confirmButtonText: 'Yes, Delete!',
                confirmButtonClass: "btn btn-success mx-1",
                cancelButtonText: 'Cancel',
                cancelButtonClass: "btn btn-danger mx-1",
                reverseButtons: true
                }).then((chooseResult) => {
                    if (chooseResult.isConfirmed) {

                        let postData = {
                            btry_seq : btry_seq
                        }

                        let result = syncAjax("POST", "/system/setting/mgtbattery/delete/complete", postData);

                        if(result.status == 'FAIL') {
                            swalWithBootstrapButtons.fire(makeAlertObj("error",result.msg)).then((errorResult) => {
                                var url = result.url;
                                $(location).attr('href',url);
                            });
                            
                        }else{
                            swalWithBootstrapButtons.fire(makeAlertObj("success",result.msg)).then((successResult) => {
                                var url = result.url;
                                $(location).attr('href',url);
                            });
                        }

                    }else{
                        return false;
                    }
                });

            }
        </script>

    </body>

 
     
</html>