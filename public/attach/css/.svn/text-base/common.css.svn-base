.form-check-input:focus {
    border-color: #4e515c !important;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='-4 -4 8 8'%3e%3ccircle r='3' fill='rgba%28255, 255, 255, 0.25%29'/%3e%3c/svg%3e") !important;
}

.form-check-input:checked:focus {
    border-color: #5b73e8 !important;
    background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='-4 -4 8 8'%3e%3ccircle r='3' fill='%23fff'/%3e%3c/svg%3e") !important;
}

.form-control:disabled {
    background-color: inherit;
    opacity: 1;
    border: none;
}

.logo-img {
    display: block;
    margin: 10px auto 10px 50px;
    height:55px;
}

.daum-map {
    width: 100%;
    height: 290px;
}
  
@media (min-width: 768px) {
    .daum-map {
        width: 100%;
        height: 580px;
    }
}

@media (max-width: 992px) {
    .vertical-menu {
        top: 45px;
    }
}
  
@media (min-width: 1200px) {
    .daum-map {
        width: 100%;
        height: 690px;
    }
}

.footer {
    padding-top: 0px;
    padding-bottom: 10px;
    height: auto;
}

.navbar-header, .header-item {
    height: 45px;
}

.page-content {
    padding-top: calc(45px + 1rem);
    padding-bottom: 0px;
}

.content-short {
    text-overflow:ellipsis;
    white-space:nowrap;
    word-wrap:normal;
    overflow:hidden;
}

.main-content {
    margin-bottom: 18px;
}

.card-icon {
    width: 45px;
    height: 46px;
}

.datepicker table tr td.disabled {
    text-decoration: line-through;
}

.table-fixed-height {
	height: 520px;
}

.card-fixed-height {
	height: 608px;
}